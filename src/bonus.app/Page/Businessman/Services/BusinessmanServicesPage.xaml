<?xml version="1.0" encoding="utf-8" ?>
<views:MvxContentPage x:TypeArguments="services:BusinessmanServicesViewModel" xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:MvvmCross.Forms.Views;assembly=MvvmCross.Forms"
             xmlns:controls="clr-namespace:bonus.app.Core.Controls;assembly=bonus.app.Core"
             xmlns:services="clr-namespace:bonus.app.Core.ViewModels.Businessman.Services;assembly=bonus.app.Core"
             xmlns:services1="clr-namespace:bonus.app.Core.Views.ViewCells.Services;assembly=bonus.app.Core"
             mc:Ignorable="d"
             x:Class="bonus.app.Core.Page.Businessman.Services.BusinessmanServicesPage">
    <NavigationPage.TitleView>
        <Label Text="Мои услуги" Style="{StaticResource TitleLabel}"/>
    </NavigationPage.TitleView>

    <ContentPage.Content> 
        <!--Страница 4.2 Мои услуги(предпринимателя)-->
        <ScrollView Margin="0,0,0,5">
            <StackLayout Margin="15,0" Spacing="0">

                <Grid>
                    <controls:RepeaterView
                        IsVisible="{Binding HasServices}"
                        IsEnabled="{Binding HasServices}"
                        ItemsSource="{Binding MyServices}"
                        VerticalOptions="FillAndExpand"
                        HorizontalOptions="FillAndExpand">
                        <controls:RepeaterView.ItemTemplate>
                            <DataTemplate>
                                <services1:MyServiceViewCell/>
                            </DataTemplate>
                        </controls:RepeaterView.ItemTemplate>
                    </controls:RepeaterView>

                    <Label Text="Пока у вас нет услуг"
                           Grid.Column="0"
                           Grid.Row="0"
                           IsVisible="{Binding NoHasServices}"
                           IsEnabled="{Binding NoHasServices}"
                           HorizontalTextAlignment="Start" Margin="5,20,5,15"/>
                </Grid>

                <BoxView Margin="0,0,0,20"/>

                <Label Text="Добавить услугу" Margin="0,0,0,35" FontSize="Body" HorizontalOptions="Center" FontFamily="Montserrat-Bold.ttf#Montserrat-Bold"/>

                <services1:MyServicesContentView/>

                <Button Text="ДОБАВИТЬ УСЛУГУ" Style="{StaticResource AppButton}" Command="{Binding AddServiceCommand}"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</views:MvxContentPage>  