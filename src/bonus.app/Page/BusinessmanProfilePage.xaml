<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="bonus.app.Page.BusinessmanProfilePage"
             Title="Профиль">
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Редактировать профиль" Order="Secondary" Clicked="ToolbarItem_Clicked"></ToolbarItem>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <!--Страница 3. Профиль предпринимателя-->
        <ScrollView VerticalScrollBarVisibility="Never">
            <StackLayout>
                <StackLayout BackgroundColor="#7B726C" HeightRequest="126" Orientation="Horizontal" Padding="5,5">
                    <Frame Padding="0" CornerRadius="50" IsClippedToBounds="True" WidthRequest="93" Margin="15,15">
                        <Image Source="business_logos.png" Aspect="AspectFill"></Image>
                    </Frame>
                    <StackLayout Margin="0,10">
                        <Label Text="Салон красоты
                                     PEONY workshop" TextColor="#FFFFFF" FontSize="16" FontFamily="Roboto" FontAttributes="Bold"></Label>
                        <Label Text="Стрижки, Кератин, Ботокс,
                                     Ламинирование, Нанопластика
                                     Еще одна строка об услугах" TextColor="#FFFFFF" FontSize="14" FontFamily="Lato" WidthRequest="210"></Label>
                    </StackLayout>
                </StackLayout>
                <StackLayout Margin="20,0"> 
                    <Grid Margin="0,25" RowSpacing="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Text="Сообщения" BackgroundColor="#bab3af" TextColor="White" CornerRadius="30" Clicked="Button_Clicked"/>
                        <Button Grid.Column="1" Text="Подписчики" BackgroundColor="#bab3af" TextColor="White" CornerRadius="30" Clicked="Button_Clicked_1"/>
                    </Grid>
                    <Label Text="+7(922)783-33-11" TextColor="#505050" FontSize="14"/>
                    <BoxView BackgroundColor="#bab3af" HeightRequest="1"/>
                    <Label Text="Москва, ул.Петразоводская, 12" TextColor="#505050" FontSize="14"/>
                    <BoxView BackgroundColor="#bab3af" HeightRequest="1"/>
                    <Label Text="10:00 — 18:00" TextColor="#505050" FontSize="14"/>
                    <BoxView BackgroundColor="#bab3af" HeightRequest="1"/>
                    <Label Text="Василий Леонидович" TextColor="#505050" FontSize="14"/>
                    <BoxView BackgroundColor="#bab3af" HeightRequest="1" Margin="0,0,0,35"/>
                    <Frame BackgroundColor="#FFFFFF" HeightRequest="23" WidthRequest="85" CornerRadius="40" IsClippedToBounds="True" Padding="0" BorderColor="#9A9A9A" Margin="0,0,0,65" HorizontalOptions="Start">
                        <Label Text="Кератин" TextColor="#9A9A9A" FontSize="12" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" FontFamily="Lato"></Label>
                    </Frame>
                    <Label Text="Подробнее об условиях бонусной программы" TextColor="#BB8D91" FontSize="14" FontFamily="Lato" TextDecorations="Underline" Margin="0,0,0,36"></Label>
                    <Label Text="Мы в соцсетях:" TextColor="#000000" FontSize="16" FontFamily="Montserrat"></Label>
                    <StackLayout Orientation="Horizontal" Spacing="5" Margin="0,10">
                        <Image Source="vkred_business.png"></Image>
                        <Image Source="instred_business.png"></Image>
                        <Image Source="facebookred_business.png"></Image>
                        <Image Source="ok_logo.png"></Image>
                    </StackLayout>
                </StackLayout>
                <Frame Margin="10,10" BackgroundColor="#FFFFFF" CornerRadius="10">
                    <StackLayout>
                        <StackLayout Orientation="Horizontal">
                            <Label Text="Портфолио" TextColor="#000000" FontSize="16" FontFamily="Roboto" HorizontalOptions="Start"></Label>
                            <Image Source="More.png" HorizontalOptions="EndAndExpand"></Image>
                        </StackLayout>
                        <Frame Padding="0" CornerRadius="10" IsClippedToBounds="True" Margin="0,10" HorizontalOptions="Start">
                            <Image Source="longhair.png" Aspect="AspectFit"></Image>
                        </Frame>
                    </StackLayout>
                </Frame>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>