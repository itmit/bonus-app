<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:bonus.app.Core.Controls;assembly=bonus.app.Core"
             xmlns:services="clr-namespace:bonus.app.Core.Views.ViewCells.Services;assembly=bonus.app.Core"
             xmlns:design="clr-namespace:bonus.app.Core.Design"
             mc:Ignorable="d"
             x:Class="bonus.app.Core.Views.ContentViews.MyServicesContentView">
    <!--Содержимое с добавлением услуг-->
    <ContentView.Content>
        <StackLayout Spacing="0">
            <StackLayout Margin="0,0,0,15" Spacing="0">
                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_OnTapped"/>
                </StackLayout.GestureRecognizers>
                <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" Margin="5,0,5,15">
                    <Label Text="{Binding SelectedService.Name, FallbackValue='Вид услуги'}"/>
                    <Image Source="Shape.png"
                               WidthRequest="15"
                               x:Name="Shape"
                               VerticalOptions="Center"
                               HorizontalOptions="EndAndExpand"
                               Rotation="0"/>
                </StackLayout>
                <BoxView/>
            </StackLayout>

            <controls:RepeaterView
                    IsVisible="False"
                    IsEnabled="False"
                    x:Name="ViewServices"
                    ItemsSource="{Binding Services}"
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand">
                <controls:RepeaterView.ItemTemplate>
                    <DataTemplate>
                        <services:ServiceTypeViewCell/>
                    </DataTemplate>
                </controls:RepeaterView.ItemTemplate>
            </controls:RepeaterView>

            <StackLayout x:Name="ServicesEntry" IsVisible="False" IsEnabled="False">
                <BindableLayout.ItemsSource>
                    <x:String>0</x:String>
                </BindableLayout.ItemsSource>
                <BindableLayout.ItemTemplate>
                    <DataTemplate x:Name="DataTemplate">
                        <Grid Margin="0,0,0,20" x:Name="Grid">
                            <Entry Placeholder="Ваши услуги"
                                   TextColor="#505050"
                                   PlaceholderColor="#505050"
                                   FontSize="14"
                                   FontFamily="{x:Static design:DesignClass.LatoRegular}"
                                   VerticalOptions="Center"
                                   Visual="Material"
                                   BackgroundColor="Transparent"/>
                            <ImageButton Source="ic_close_remove_4x.png"
                                         WidthRequest="15"
                                         VerticalOptions="Center"
                                         BackgroundColor="Transparent"
                                         HorizontalOptions="EndAndExpand"
                                         Margin="0,0,10,0"
                                         Clicked="ImageButton_OnClicked"/>
                        </Grid>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </StackLayout>

            <StackLayout x:Name="PlusServices" Margin="0,0,0,15" Spacing="0" IsVisible="False">
                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer Tapped="EntryVisible_OnTapped"/>
                </StackLayout.GestureRecognizers>
                <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" Margin="5,0,5,15">
                    <Label Text="Добавить свою услугу" FontFamily="{x:Static design:DesignClass.LatoRegular}"/>
                    <Image Source="ic_plus_add_4x.png"
                               WidthRequest="24"
                               VerticalOptions="Center"
                               HorizontalOptions="EndAndExpand"/>
                </StackLayout>
                <BoxView/>
            </StackLayout>
        </StackLayout>
    </ContentView.Content>
</ContentView>